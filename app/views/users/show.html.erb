<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
<% if current_user.github_token %>
    <h3>Github Repo's</h3>
    <section id="github">
      <% user_repo.repos.each do |repo| %>
      <section id="repo">
        <p><%= link_to repo.name, repo.html %></p>
      </section>
      <% end %>
    <h3>Followers</h3>
      <section id="followers">
        <% user_repo.followers.each do |follower| %>
          <section id="follower">
          <%= link_to follower.name, follower.html %>
          <section>
         <% end %>
      </section>
    <h3>Following</h3>
      <section id="followering">
        <% user_repo.followings.each do |following| %>
          <section id="follower">
          <%= link_to following.name, following.html %>
          <section>
         <% end %>
      </section>
         
  </section>
  <% end %>
</section>
